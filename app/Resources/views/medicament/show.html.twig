{% extends 'base.html.twig' %}

{% block body %}
    <h1>Medicament</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ medicament.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ medicament.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if medicament.date %}{{ medicament.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ medicament.category }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ medicament.price }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('medicament_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('medicament_edit', { 'id': medicament.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
